<PreferenceScreen
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        app:title="@string/pref_maintenance_header">

        <Preference
            app:key="backup"
            app:title="@string/pref_backup_title"
            app:summary="@string/pref_backup_summary" />

        <Preference
            app:key="restore"
            app:title="@string/pref_restore_title"
            app:summary="@string/pref_restore_summary" />

    </PreferenceCategory>

    <PreferenceCategory
        app:title="@string/pref_help_header">

        <Preference
            app:key="github"
            app:title="@string/pref_github_title"
            app:summary="@string/pref_github_summary" />

        <Preference
            app:key="about"
            app:title="@string/pref_about_title"
            app:summary="@string/pref_about_summary" />

    </PreferenceCategory>

</PreferenceScreen>