<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Debitum" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_aztec</item>
        <item name="colorPrimaryVariant">@color/grey_fiord</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red_totem_pole</item>
        <item name="colorSecondaryVariant">@color/red_valencia</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <item name="android:actionMenuTextColor">@color/menu_item_selector</item>
    </style>

    <style name="Theme.Debitum.FullScreenDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorPrimaryDark">@color/grey_aztec</item>
        <item name="colorAccent">@color/grey_fiord</item>
        <item name="colorPrimary">@color/grey_fiord</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?attr/colorSurface</item>
        <item name="android:actionMenuTextColor">@color/menu_item_selector</item>
    </style>
</resources>