<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Widget.Debitum.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="ThemeOverlay.Debitum.Toolbar">
        <item name="android:elevation">@dimen/toolbar_elevation</item>
    </style>
    <style name="ThemeOverlay.Debitum.FilterBar">
        <item name="android:elevation">@dimen/filterbar_elevation</item>
        <item name="android:alpha">0.8</item>
        <item name="android:background">?attr/colorSecondary</item>
        <item name="titleTextAppearance">@style/TextAppearance.Debitum.FilterBarTitle</item>
        <item name="subtitleTextAppearance">@style/TextAppearance.Debitum.FilterBarSubtitle</item>
    </style>
    <style name="ThemeOverlay.Debitum.TotalsHeader">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:alpha">0.8</item>
        <item name="android:elevation">@dimen/header_elevation</item>
    </style>


    <style name="TextAppearance.Debitum.FilterBarTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">sans-serif</item>
    </style>
    <style name="TextAppearance.Debitum.FilterBarSubtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextAppearance.Debitum.HeaderLabel" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="fontFamily">sans-serif-light</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">18sp</item>
        <item name="android:alpha">1</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="TextAppearance.Debitum.HeaderAmount" parent="TextAppearance.Debitum.ListAmount">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="TextAppearance.Debitum.ListName" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/robotoslab_regular</item>
        <item name="android:fontFamily">@font/robotoslab_regular</item>
        <item name="android:textSize">16sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>
    <style name="TextAppearance.Debitum.ListAmount" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/robotoslab_light</item>
        <item name="android:fontFamily">@font/robotoslab_light</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="TextAppearance.Debitum.ListOweLent" parent="TextAppearance.MaterialComponents.Overline"/>
    <style name="listTimestamp" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:alpha">0.5</item>
    </style>
    <style name="TextAppearance.Debitum.ListDescription" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:alpha">0.5</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ThemeOverlay"/>
    <style name="ThemeOverlay.Debitum"/>
</resources>