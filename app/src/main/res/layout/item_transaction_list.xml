<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:backgroundTint="@color/list_item_bg_selector"
    android:backgroundTintMode="src_over"
    android:orientation="horizontal"
    android:paddingHorizontal="@dimen/list_margin_horizontal"
    android:paddingVertical="@dimen/list_margin_vertical">

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/listName"
        tools:text="Rincewind" />

    <TextView
        android:id="@+id/list_item_gave_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@id/list_item_name"
        android:layout_below="@id/list_item_name"
        style="@style/listOweLent"
        tools:text="RECEIVED" />

    <TextView
        android:id="@+id/list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_gave_received"
        android:layout_alignStart="@id/list_item_name"
        android:textSize="14sp"
        tools:text="Stamps" />

    <TextView
        android:id="@+id/list_item_amount"
        style="@style/listAmount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/list_item_name"
        android:layout_alignParentEnd="true"
        tools:text="7,00" />

    <TextView
        android:id="@+id/list_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_amount"
        android:layout_alignBaseline="@id/list_item_description"
        android:layout_alignParentEnd="true"
        android:textSize="14sp"
        tools:text="1986-03-02" />
</RelativeLayout>
