<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:backgroundTint="@color/list_item_bg_selector"
    android:backgroundTintMode="src_over"
    android:orientation="horizontal"
    android:paddingHorizontal="24dp"
    android:paddingVertical="18dp">

    <TextView
        android:id="@+id/list_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:textSize="17sp"
        tools:text="Rincewind" />

    <TextView
        android:id="@+id/list_item_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_name"
        android:layout_marginTop="7dp"
        android:textSize="14sp"
        tools:text="Stamps" />

    <TextView
        android:id="@+id/list_item_gave_received"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        style="@style/listOweLent"
        tools:text="RECEIVED" />

    <TextView
        android:id="@+id/list_item_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_gave_received"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingVertical="12dp"
        style="@style/listAmount"
        tools:text="7,00" />

    <TextView
        android:id="@+id/list_item_timestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_amount"
        android:layout_alignBaseline="@id/list_item_description"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:textSize="14sp"
        tools:text="1986-03-02" />
</RelativeLayout>
