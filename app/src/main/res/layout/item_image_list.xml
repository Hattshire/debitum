<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?attr/colorSurface"
    android:backgroundTint="@color/list_item_bg_selector"
    android:backgroundTintMode="src_over"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:paddingVertical="@dimen/list_margin_vertical"
    android:paddingHorizontal="@dimen/list_margin_horizontal"
    tools:ignore="RtlSymmetry"
    tools:layout_width="@dimen/transaction_image_height">

    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/transaction_image_height"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/ic_baseline_add_photo_64"
        tools:ignore="ContentDescription,RtlSymmetry" />

    <TextView
        android:id="@+id/image_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:lines="1"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/button_delete"
        app:layout_constraintStart_toStartOf="@id/image"
        tools:text="image1.jpg" />

    <ImageView
        android:id="@+id/button_delete"
        android:src="@drawable/ic_baseline_delete_outline_24"
        android:layout_width="24dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/image_title"
        app:layout_constraintBottom_toBottomOf="@id/image_title"
        app:layout_constraintStart_toEndOf="@id/image_title"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/edit_transaction_image_delete_desc" />

</androidx.constraintlayout.widget.ConstraintLayout>
