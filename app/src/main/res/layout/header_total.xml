<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    style="@style/TotalsHeader">

    <TextView
        android:id="@+id/header_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginVertical="32dp"
        android:text="@string/header_label"
        android:textAppearance="@style/headerLabel"/>

    <TextView
        android:id="@+id/header_total"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/header_label"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="32dp"
        android:textAppearance="@style/listAmount"
        android:textSize="30sp"
        tools:text="123"
        tools:ignore="RelativeOverlap" />

    <TextView
        android:id="@+id/header_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_total"
        android:layout_alignEnd="@id/header_total"
        android:text="@string/header_desc_items"
        android:textSize="12sp"
        android:fontFamily="sans-serif-smallcaps" />

</RelativeLayout>
